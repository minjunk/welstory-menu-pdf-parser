{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "newLine": "lf",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
