{
  "allowJs": true,
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "newLine": "lf",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./pdf2json.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
